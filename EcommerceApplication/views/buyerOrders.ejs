<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>My Orders - Ecommerce</title>
    <style>
        body { background-color: #f8f9fa; }
        .orders-container { max-width: 1000px; margin: 2rem auto; background: white; padding: 2rem; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.08); }
        .order-card { border: 1px solid #e3e3e3; border-radius: 8px; padding: 1rem; margin-bottom: 1rem; }
        .badge-status { font-size: 0.85rem; }
    </style>
    <link rel='stylesheet' href='/style.css'>
</head>
<body class="page-shell">
    <%- include('partials/topbar') %>
    <%- include('partials/navbar') %>
    <div class="container">
        <div class="orders-container">
            <h1 class="mb-3">My Orders</h1>
            <form action="/my-orders/wallet" method="POST" class="mb-3 d-flex flex-wrap gap-2">
                <input
                    class="form-control"
                    style="max-width: 420px"
                    type="text"
                    name="wallet"
                    placeholder="Paste your buyer wallet address"
                    value="<%= buyerWallet || '' %>"
                    required
                >
                <button class="btn btn-dark" type="submit">Load Orders</button>
            </form>
            <% if (!buyerWallet) { %>
                <div class="alert alert-info">
                    Enter your buyer wallet to see your orders.
                </div>
            <% } %>

            <% if (!orders || orders.length === 0) { %>
                <div class="alert alert-info">No orders found.</div>
            <% } else { %>
                <% orders.forEach(order => { %>
                    <div class="order-card">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div><strong>Order ID:</strong> <%= order.orderId %></div>
                                <div><strong>Payment Status:</strong>
                                    <span class="badge bg-secondary badge-status"><%= order.status %></span>
                                </div>
                                <div><strong>Delivery Status:</strong>
                                    <span class="badge bg-info badge-status"><%= order.deliveryStatus || "PENDING" %></span>
                                </div>
                                <div><strong>Created:</strong> <%= order.createdAt || "-" %></div>
                            </div>
                            <div class="d-flex gap-2">
                                <a class="btn btn-outline-primary" href="/trackDelivery?orderId=<%= encodeURIComponent(order.orderId) %>">Track</a>
                            </div>
                        </div>

                        <% if (order.items && order.items.length) { %>
                            <hr>
                            <div><strong>Items:</strong></div>
                            <ul class="mb-0">
                                <% order.items.forEach(item => { %>
                                    <li><%= item.name || item.productId %> (x<%= item.quantity || 1 %>)</li>
                                <% }); %>
                            </ul>
                        <% } %>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</body>
</html>
