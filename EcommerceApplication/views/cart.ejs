<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Shopping Cart - Ecommerce</title>
    <style>
        body { background-color: #f8f9fa; }
        .cart-container { max-width: 1000px; margin: 2rem auto; background: white; padding: 2rem; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1); }
        .cart-item { border-bottom: 1px solid #dee2e6; padding: 1rem 0; }
        .cart-item img { width: 80px; height: 80px; object-fit: cover; border-radius: 5px; }
        .quantity-controls { display: flex; align-items: center; gap: 0.5rem; }
        .quantity-controls button { width: 30px; height: 30px; border: none; background: #6c757d; color: white; border-radius: 50%; }
        .price-breakdown { background: #f8f9fa; padding: 1rem; border-radius: 5px; }
        .checkout-btn { background-color: #28a745; border: none; padding: 0.75rem 2rem; font-size: 1.2rem; border-radius: 5px; width: 100%; }
        .checkout-btn:hover { background-color: #218838; }
        .loyalty-info { background-color: #e9ecef; padding: 1rem; border-radius: 5px; margin-top: 1rem; }
    </style>
    <link rel="stylesheet" href="/style.css">
</head>
<body class="page-shell">
    <%- include('partials/topbar') %>
    <%- include('partials/navbar') %>
    <div class="container">
        <div class="cart-container">
            <h1 class="mb-4">Shopping Cart</h1>
            <% if (typeof cartItems !== 'undefined' && cartItems.length > 0) { %>
                <% cartItems.forEach(item => { %>
                    <div class="cart-item row align-items-center">
                        <div class="col-md-2">
                            <img src="/images/<%= item.image %>" alt="<%= item.name %>">
                        </div>
                        <div class="col-md-4">
                            <h5><%= item.name %></h5>
                            <p class="text-muted"><%= item.description %></p>
                        </div>
                        <div class="col-md-2">
                            <div class="quantity-controls">
                                <form action="/updateCart/<%= item.productId %>" method="POST" style="display: inline;">
                                    <input type="hidden" name="delta" value="-1">
                                    <button type="submit">-</button>
                                </form>
                                <span><%= item.quantity %></span>
                                <form action="/updateCart/<%= item.productId %>" method="POST" style="display: inline;">
                                    <input type="hidden" name="delta" value="1">
                                    <button type="submit">+</button>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-2">
                            $<%= (item.price * item.quantity).toFixed(2) %>
                        </div>
                        <div class="col-md-2">
                            <form action="/removeFromCart/<%= item.productId %>" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
                <div class="price-breakdown mt-4">
                    <h4>Price Breakdown</h4>
                    <div class="d-flex justify-content-between">
                        <span>Subtotal:</span>
                        <span>$<%= subtotal.toFixed(2) %></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Shipping Fee:</span>
                        <span>$<%= shippingFee.toFixed(2) %></span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between font-weight-bold">
                        <span>Total Amount:</span>
                        <span>$<%= total.toFixed(2) %></span>
                    </div>
                </div>
                <div class="loyalty-info">
                    <h5>Expected Loyalty Tokens</h5>
                    <p>You will earn <strong><%= expectedTokens %></strong> loyalty tokens upon successful delivery confirmation.</p>
                </div>
                <a href="/checkout" class="checkout-btn mt-3 btn">Proceed to Checkout</a>
            <% } else { %>
                <p>Your cart is empty.</p>
                <a href="/" class="btn btn-primary">Continue Shopping</a>
            <% } %>
        </div>
    </div>
</body>
</html>
