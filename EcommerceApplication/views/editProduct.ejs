<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .navbar-custom { background-color: #9e9e9e; }
        .navbar-custom .nav-link,
        .navbar-custom .navbar-brand,
        .navbar-custom .navbar-text { color: #1f1f1f; font-weight: 600; }
        .navbar-custom .nav-link:hover,
        .navbar-custom .navbar-brand:hover { color: #111111; }
        .nav-search { min-width: 200px; border-radius: 999px; }
        .nav-btn { border-radius: 999px; }
        .form-container {
            max-width: 640px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
        .form-title { color: var(--primary-color); margin-bottom: 1.5rem; font-weight: 600; }
        .preview-img { max-width: 160px; border-radius: 10px; box-shadow: 0 2px 6px rgba(0,0,0,0.15); }
    </style>
    <link rel='stylesheet' href='/style.css'>
    <title>Edit Product - Ecomme</title>
</head>
<body class="page-shell">
    <%- include('partials/topbar') %>
    <nav class="navbar navbar-expand-lg navbar-custom navbar-light">
        <div class="container-fluid">
            <span class="navbar-brand d-flex align-items-center gap-2">&nbsp;</span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/products">Products</a></li>
                    <li class="nav-item"><a class="nav-link" href="/addProduct">Add Product</a></li>
                    <%- include('partials/admin-nav') %>
                    <li class="nav-item"><a class="nav-link" href="/wallet">Wallet</a></li>
                    <li class="nav-item"><a class="nav-link" href="/about">About Us</a></li>
                </ul>
                <div class="d-flex me-lg-3 my-2 my-lg-0">
                    <input class="form-control nav-search" type="search" placeholder="Search products" aria-label="Search">
                </div>
                <div class="d-flex align-items-center gap-2">
                    <% if (!(user && user.role === 'admin')) { %>
                    <a class="btn btn-dark nav-btn" href="/cart">Add to Cart</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <div class="form-container">
        <div class="form-title text-center">
            <h2>Edit Product</h2>
            <p class="text-muted mb-0">Product ID: <strong><%= product.productId %></strong></p>
        </div>
        <form action="/editProduct/<%= product.productId %>" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="chainIndex" value="<%= chainIndex || '' %>">
            <div class="mb-3">
                <label class="form-label" for="name">Product Name</label>
                <input class="form-control" id="name" name="name" required value="<%= product.catalog?.name || product.productInfo?.name || '' %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" name="description" rows="4" required><%= product.catalog?.description || '' %></textarea>
            </div>
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label" for="price">Price</label>
                    <input type="number" class="form-control" id="price" name="price" min="0" step="0.01" required value="<%= product.catalog?.price || 0 %>">
                </div>
                <div class="col-md-4">
                    <label class="form-label" for="stock">Stock</label>
                    <input type="number" class="form-control" id="stock" name="stock" min="0" step="1" required value="<%= product.catalog?.stock || 0 %>">
                </div>
                <div class="col-md-4">
                    <label class="form-label" for="releaseDate">Release Date</label>
                    <input type="date" class="form-control" id="releaseDate" name="releaseDate" required value="<%= product.catalog?.releaseDate || product.productInfo?.releaseDate || '' %>">
                </div>
            </div>
            <div class="row g-3 mt-1">
                <div class="col-md-6">
                    <label class="form-label" for="category">Category</label>
                    <input class="form-control" id="category" name="category" required value="<%= product.catalog?.category || product.productInfo?.category || '' %>">
                </div>
                <div class="col-md-6">
                    <label class="form-label d-block">Current Image</label>
                    <% const currentImg = product.catalog?.image ? ('/images/' + product.catalog.image) : '/images/ecomme.png'; %>
                    <img src="<%= currentImg %>" alt="Current product image" class="preview-img">
                </div>
            </div>
            <div class="mb-3 mt-3">
                <label class="form-label" for="image">Upload New Image (optional)</label>
                <input type="file" class="form-control" id="image" name="image" accept="image/*">
            </div>
            <button type="submit" class="btn btn-dark w-100 mt-2">Save Changes</button>
        </form>
    </div>
</body>
</html>
