<!DOCTYPE html>
<% const p = productData; %>
<% const isJson = !!p.productId; %>
<% const catalog = p.catalog ? p.catalog : p; %>
<% const linkId = p.productId || p.id; %>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title><%= catalog.name || "Product" %> - Ecommerce</title>
    <style>
        body { background-color: #f8f9fa; }
        .product-container { max-width: 800px; margin: 2rem auto; background: white; padding: 2rem; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1); }
        .product-image { max-width: 100%; height: auto; border-radius: 10px; }
        .buy-btn { background-color: #28a745; border: none; padding: 0.75rem 2rem; font-size: 1.2rem; border-radius: 5px; }
        .buy-btn:hover { background-color: #218838; }
        .loyalty-info { background-color: #e9ecef; padding: 1rem; border-radius: 5px; margin-top: 1rem; }
    </style>
    <link rel='stylesheet' href='/style.css'>
</head>
<body class="page-shell">
    <%- include('partials/navbar') %>
    <div class="container">
        <div class="product-container">
            <div class="row">
                <div class="col-md-6">
                    <% const imgFile = catalog.image ? ("/images/" + catalog.image) : "/images/placeholder.jpg"; %>
                    <img src="<%= imgFile %>" alt="<%= catalog.name || 'No image' %>" class="product-image">

                </div>
                <div class="col-md-6">
                    <h1><%= catalog.name || p.productInfo?.name %></h1>
                    <p><%= catalog.description || "No description" %></p>
                    <p>$<%= (catalog.price !== undefined ? catalog.price : 0) %></p>

                    <p class="text-muted">Category: <%= catalog.category || "-" %></p>
                    <p class="text-muted">Release Date: <%= catalog.releaseDate || "-" %></p>
                    <p><strong>Description:</strong> <%= catalog.description || "No description" %></p>
                    <h3 class="text-success">$<%= (catalog.price ?? 0) %></h3>
                    <form action="/escrow/buy/<%= linkId %>" method="POST" data-escrow data-escrow-form
                          data-escrow-address="<%= contractAddress || '' %>"
                          data-seller-address="<%= sellerAcct || '' %>"
                          data-order-endpoint="/orders"
                          data-product-id="<%= linkId %>"
                          data-order-items='<%- JSON.stringify([{ productId: linkId, name: catalog.name, price: (catalog.price ?? 0), quantity: 1 }]) %>'>
                        <div class="alert alert-secondary py-2 mb-2">
                            <div><strong>Wallet:</strong> <span data-wallet-status>Not connected</span></div>
                            <div><strong>Address:</strong> <span data-wallet-address>-</span></div>
                            <button type="button" class="btn btn-sm btn-outline-dark mt-2" data-connect-wallet>
                                Connect MetaMask
                            </button>
                        </div>
                        <div class="mb-3">
                            <label for="priceEth" class="form-label">Price in ETH</label>
                            <input type="number" step="0.0001" min="0" class="form-control" id="priceEth" name="priceEth" required data-eth-input>
                        </div>
                        <div class="small text-muted mb-2">Payment is locked in escrow until delivery is confirmed.</div>
                        <button type="submit" class="buy-btn" data-escrow-submit>Buy Now with MetaMask</button>
                        <div class="small text-danger mt-2" data-escrow-status></div>
                    </form>
                    <div class="loyalty-info">
                        <h5>Loyalty Tokens</h5>
                        <p>After delivery confirmation, you will automatically earn loyalty tokens through our smart contract. These tokens can be used for future discounts and rewards.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/ethers@6.10.0/dist/ethers.umd.min.js"></script>
    <script src="/js/escrow-frontend.js"></script>
</body>
</html>



