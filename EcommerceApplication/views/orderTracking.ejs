<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Order Tracking - Ecommerce</title>
    <style>
        body { background-color: #f8f9fa; }
        .tracking-container { max-width: 900px; margin: 2rem auto; background: white; padding: 2rem; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.08); }
    </style>
</head>
<body>
    <div class="container">
        <div class="tracking-container">
            <h1 class="mb-3">Order Tracking</h1>
            <div class="mb-3"><strong>Order ID:</strong> <%= order.orderId %></div>
            <div class="mb-3"><strong>Status:</strong> <%= order.status %></div>
            <div class="mb-3"><strong>Buyer Wallet:</strong> <%= order.buyerWallet || "-" %></div>
            <div class="mb-3"><strong>Delivery Address:</strong> <%= order.deliveryAddress || "-" %></div>
            <div class="mb-3"><strong>Created:</strong> <%= order.createdAt || "-" %></div>

            <% if (order.items && order.items.length) { %>
                <h5 class="mt-4">Items</h5>
                <ul>
                    <% order.items.forEach(item => { %>
                        <li><%= item.name || item.productId %> (x<%= item.quantity || 1 %>)</li>
                    <% }); %>
                </ul>
            <% } %>
        </div>
    </div>
</body>
</html>
